<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_selector_app_title_bottom1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_app_title_bottom_bg1"
            android:gravity="center"
            android:text="@string/app_title_bottom_1"
            android:textColor="@drawable/selector_app_title_bottom_tc" />

        <RadioButton
            android:id="@+id/rb_selector_app_title_bottom2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_app_title_bottom_bg2"
            android:gravity="center"
            android:text="@string/app_title_bottom_2"
            android:textColor="@drawable/selector_app_title_bottom_tc" />

        <RadioButton
            android:id="@+id/rb_selector_app_title_bottom3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_app_title_bottom_bg3"
            android:gravity="center"
            android:text="@string/app_title_bottom_3"
            android:textColor="@drawable/selector_app_title_bottom_tc" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>