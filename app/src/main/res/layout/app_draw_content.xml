<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_draw">
    <!--标题-->
    <include
        android:id="@+id/app_draw_title"
        layout="@layout/app_draw_title" />
    <!--内容-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_draw_title"
        app:layout_constraintVertical_weight="1"></android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>